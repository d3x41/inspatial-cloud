{
  "$schema": ".inspatial/serve-config-schema.json",
  "serve": {
    "SERVE_MODE": "production",
    "LOG_LEVEL": "info",
    "LOG_TRACE": false,
    "SERVE_HOSTNAME": "0.0.0.0",
    "SERVE_PORT": 8000,
    "SERVE_AUTO_CONFIG": true
  },
  "base": {
    "ALLOWED_ORIGINS": ["*"]
  },
  "auth": {
    "ALLOW_ALL": false
  },
  "orm": {
    "AUTO_TYPES": true,
    "AUTO_MIGRATE": true,
    "DB_CONNECTION_TYPE": "tcp",
    "DB_NAME": "inspatial",
    "DB_HOST": "localhost",
    "DB_PORT": 5432,
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres",
    "DB_SCHEMA": "public",
    "DB_APP_NAME": "InSpatial",
    "DB_CLIENT_MODE": "pool",
    "DB_POOL_SIZE": 1,
    "DB_MAX_POOL_SIZE": 10,
    "DB_IDLE_TIMEOUT": 5000
  }
}
