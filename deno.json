{
  "workspace": [
    "./packages/serve",
    "./packages/cloud",
    "./packages/orm",
    "./dev"
  ],
  "unstable": ["broadcast-channel"],
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "no-var",
        "no-window",

        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment", "no-unused-vars"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  }
}
