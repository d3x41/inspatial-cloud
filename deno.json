{
  "workspace": [
    "./packages/serve",
    "./packages/cloud",
    "./packages/orm",
    "./dev"
  ],
  "unstable": ["broadcast-channel"],
  "lint": {
    "rules": {
      "tags": ["jsr", "recommended"],
      "include": [
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "verbatim-module-syntax"
      ],
      "exclude": ["no-explicit-any"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  }
}
